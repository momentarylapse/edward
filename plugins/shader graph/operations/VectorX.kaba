use edward.*

class NodeVectorX extends shader.Node
	func __init__()
		super.__init__("VectorX")
		params.add([shader.Type.VEC3, "vector", "vec3(0,0,0)", ""])
		output.add([shader.Type.FLOAT, "x"])
	func override code_pixel(out c: shader.BuilderContext) -> string
		var t = c.create_out(self, 0)
		return "
	float {{t}} = {{c.value(self, 0)}}.x;"
