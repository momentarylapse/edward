use edward

class NodePower extends shader.Node
	func __init__()
		super.__init__("Power")
		params.add([shader.TYPE_FLOAT, "base", "2.0", "range=0:8"])
		params.add([shader.TYPE_FLOAT, "exponent", "2.0", "range=0:8"])
		output.add([shader.TYPE_FLOAT, "out"])
	func override const code_pixel(out c: shader.BuilderContext) -> string
		var t = c.create_out(self, 0)
		return "
	float {{t}} = pow({{c.value(self, 0)}}, {{c.value(self, 1)}});"
