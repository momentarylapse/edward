use edward

class NodeChannelRed extends shader.Node
	void __init__()
		super.__init__("ChannelRed")
		params.add([shader.TYPE_COLOR, "color", "#ffffffff", ""])
		output.add([shader.TYPE_FLOAT, "red"])
	override const string code_pixel(out shader.BuilderContext c)
		let a = c.value(self, 0)
		let t = c.create_out(self, 0)
		return "
	float {{t}} = {{a}}.r;"
