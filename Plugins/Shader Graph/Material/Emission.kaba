use edward

class NodeEmission extends shader.Node
	void __init__()
		super.__init__("Emission")
		output.add([shader.TYPE_COLOR, "emission"])
	override const string[] dependencies()
		return ["material"]
	override const string code_pixel(out shader.BuilderContext c)
		let t = c.create_out(self, 0)
		return "
	vec4 {{t}} = material.emission;"
