use "../../api.kaba"

class NodeEmission extends ShaderNode
	void __init__()
		super.__init__("Emission")
		output.add([SHADER_TYPE_COLOR, "emission"])
	override const string[] dependencies()
		return ["material"]
	override const string code_pixel(out ShaderBuilderContext c)
		let t = c.create_out(self, 0)
		return "
	vec4 {{t}} = material.emission;"
