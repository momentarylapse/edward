use edward

class NodeTexture0 extends shader.Node
	void __init__()
		super.__init__("Texture0")
		params.add([shader.TYPE_VEC2, "uv", "-mesh-", ""])
		output.add([shader.TYPE_COLOR, "color"])
	override const string[] dependencies()
		return ["texture0", "in:uv"]
	override const string code_pixel(out shader.BuilderContext c)
		var uv = c.build_value(self, 0, "in_uv")
		var t = c.create_out(self, 0)
		return "
	vec4 {{t}} = texture(tex0, {{uv}});"
