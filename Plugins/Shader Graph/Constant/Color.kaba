use "../../api.kaba"

class NodeColor extends ShaderNode
	void __init__()
		super.__init__("Color")
		params.add([SHADER_TYPE_COLOR, "color", "#ffffffff", ""])
		output.add([SHADER_TYPE_COLOR, "value"])
	override const string code_pixel(out ShaderBuilderContext c)
		let t = c.create_out(self, 0)
		return "
	vec4 {{t}} = {{c.value(self, 0)}};"
