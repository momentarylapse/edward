use edward

class NodeUniformVector extends shader.Node
	void __init__()
		super.__init__("UniformVector")
		params.add([shader.TYPE_LITERAL, "name", "xxx", ""])
		output.add([shader.TYPE_VEC3, "value"])
	override const string[] uniform_dependencies()
		return ["vec3 {{params[0].value}}"]
	override const string code_pixel(out shader.BuilderContext c)
		var t = c.create_out(self, 0)
		return "
	vec3 {{t}} = {{c.value(self, 0)}};"
