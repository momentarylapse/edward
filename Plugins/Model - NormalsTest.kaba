use "api.kaba"

const int n = 256

void main()
	float a = sqrt(n) * 2 * pi
	
	data_model.BeginActionGroup("Normals")
	for i in 0:n
		float t = float(i) / float(n - 1)
		t = (sqrt(t) - sqrt(1.0 - t) + 1) / 2
		data_model.AddVertex(vector(sin(t * pi) * sin(t * a), cos(t * pi), sin(t * pi) * cos(t * a)), 0, -1)
	data_model.EndActionGroup()
